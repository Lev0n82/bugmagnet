{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
        "presets": ["@babel/preset-env"]
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "indent": ["off"],
    "one-var": ["off"],
    "no-plusplus": ["off"],
    "quotes": ["error", "single", {"avoidEscape": true, "allowTemplateLiterals": true}]
  },
  "globals": {
      "chrome": "readonly"
  }
}
